<!DOCTYPE html>
<html lang="en">
        <script type="text/template" id="entries-index">
          <div class="row-fluid">
            <div class="span8">
              <h2>Application Form</h2>
            </div>
            <div class="span4">
              <a href="#" id="edit_entry" class="pull-right">Edit</a>
            </div>
          </div>
          <hr>
          <div class="alert alert-error fade in" style="display:none">
              <button class="close"  type="button">&times;</button>
              <div class="message">test</div>
          </div>
          <div id="entries">
          </div>
        </script>

        <script type="text/template" id="entry">
          <div class="span4 panel panel-default">
            <div class="panel-body">
              <h4><%=entry.get('user_name')%></h4>
            </div>
            <div class="panel-body">
              <p><%=entry.get('user_birthday')%></p>
              <p><%=entry.get('user_email')%></p>
            </div>
          </div>
          <div class="span8 panel panel-default">
            <div class="span4 panel-body text-right">
              <p><%=entry.get('site_url')%></p>
              <p><%=entry.get('user_phone')%></p>
              <p><%=entry.get('user_skill')%></p>
              <p><%=entry.get('user_gender')%></p>
            </div>
            <div class="span8 panel-body">
              <p><%=entry.get('user_about')%></p>
            </div>
          </div>
        </script>

        <script type="text/template" id="edit-entry-modal">
            <form class="form-inline edit-form"  role="form" data-toggle="validator">
              <h3 class="form-label">Application Form</h3>
              <input type="hidden" class="form-control" name="id" value="<%=entry.get('id')%>">
              <div class="form-group">
                <input type="text" class="form-control" name="user_name" placeholder="User Name" value="<%=entry.get('user_name')%>" required>
              </div>
              <div class="form-group">
                <input type="date" class="form-control" name="user_birthday" placeholder="Birthdate" value="<%=entry.get('user_birthday')%>">
              </div>
              <div class="form-group">
                <input type="email" class="form-control" name="user_email" placeholder="Email" value="<%=entry.get('user_email')%>" required>
              </div>
              <div class="form-group">
                <input type="url" class="form-control" name="site_url" placeholder="Url" value="<%=entry.get('site_url')%>">
              </div>
              <div class="form-group">
                <input type="tel" class="form-control" name="user_phone" placeholder="Enter Phone Number" value="<%=entry.get('user_phone')%>">
              </div>
              <div class="form-group">
                <input type="number" class="form-control" name="user_skill" placeholder="Skill Number" value="<%=entry.get('user_skill')%>">
              </div>
              <div class="form-group">
                <div class="radio">
                  <% if(entry.get('user_gender') == 'male'){ %>
                    <label><input type="radio" name="user_gender" value="male" checked>Male</label>
                  <% } else { %>
                    <label><input type="radio" name="user_gender" value="male">Male</label>
                  <% } %>
                </div>
                <div class="radio">
                  <% if(entry.get('user_gender') == 'female'){ %>
                    <label><input type="radio" name="user_gender" value="female" checked>Female</label>
                  <% } else { %>
                    <label><input type="radio" name="user_gender" value="female">Female</label>
                  <% } %>
                </div>
              </div>
              <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password">
              </div>
              <div class="form-group">
                <input type="password" class="form-control" name="confirmPassword" placeholder="Retype Password">
              </div>
              <div class="form-group user_about">
                <input type="text" class="form-control user_about" name="user_about" placeholder="Enter a brief description of yourself and interest" value="<%=entry.get('user_about')%>">
              </div>
            </form>
        </script>

        {% block styles %}
            <link rel="stylesheet" type="text/css" href="{{ asset('/bundles/app/css/my.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('/bundles/app/css/bootstrap.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('/bundles/app/css/bootstrap-responsive.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('/bundles/app/css/backbone.modal.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('/bundles/app/js/jquery.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/bundles/app/js/underscore.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/bundles/app/js/backbone.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/bundles/app/js/backbone.modal.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/bundles/app/js/backbone.bootstrap-modal.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/bundles/app/js/app.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/bundles/app/js/models/entry.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/bundles/app/js/collections/entries.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/bundles/app/js/views/entries/entry.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/bundles/app/js/views/entries/entries_index.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/bundles/app/js/views/entries/edit_entry.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/bundles/app/js/routers/entries_router.js') }}" type="text/javascript"></script>

            <script src="{{ asset('/bundles/app/js/bootstrap.min.js') }}" type="text/javascript"></script>


        {% endblock %}

    <div class="container">
      <div class="row-fluid content">
        <div id="container" >
        </div>
      </div>
    </div>
</html>
